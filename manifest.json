{
    "manifest_version": 2,
    "name": "Memento",
    "description": "TODO",
    "version": "0.1",
    "homepage_url": "https://github.com/agh-ki-io/Memento",

    "icons": {
        "48": "icons/memo-note-48.png"
    },

    "permissions": [
        "storage",
        "activeTab",
        "clipboardRead",
        "clipboardWrite",
        "tabs",
        "<all_urls>"
    ],

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["selection/content-script.js"]
    }],

    "sidebar_action": {
        "default_icon": {
            "32" : "icons/memo-note-32.png"
        },
        "default_title": "Memento",
        "default_panel": "sidebar/notes-manager.html"
    },

    "applications": {
        "gecko": {
            "id": "quicknote-example@mozilla.org"
        }
    }
}

